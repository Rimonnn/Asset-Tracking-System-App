@using AssetTrakingSystemApp.Models
@model AssetTrakingSystemApp.Models.CategorySetup
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.message != null)
{
    <h4>@ViewBag.message</h4>
}

<h2>Save  Category</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>@Html.LabelFor(c => c.Name)</td>
            <td>@Html.TextBoxFor(c => c.Name)</td>
            <td>@Html.ValidationMessageFor(c => c.Name)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(c => c.Code)</td>
            <td>@Html.TextBoxFor(c => c.Code)</td>
            <td>@Html.ValidationMessageFor(c => c.Code)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(c => c.GeneralCategoryId)</td>
            <td>@Html.DropDownListFor(c => c.GeneralCategoryId, new SelectList(ViewBag.GeneralCategoryList, "Id", "Name"))</td>
            <td>@Html.ValidationMessageFor(c => c.GeneralCategoryId)</td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Save" /></td>
        </tr>
    </table>
    <br /><br />
    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Short Name</th>
            @*<th>Under of Organization</th>*@

        </tr>
        @foreach (var org in ((List<CategorySetup>)ViewBag.CategorySetupList))
        {
            <tr>
                <td>@org.Name</td>
                <td>@org.Code</td>
                @*<td @org.OrganizationId>@org.Organization.Name</td>*@

            </tr>
        }

    </table>

}